<Window x:Class="Pr9.EditTrainingWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:local="clr-namespace:Pr9"
        mc:Ignorable="d"
        Title="Редактировать Тренировку" Height="300" Width="400">
    <Grid>
        <StackPanel Margin="10">
            <TextBlock Text="Название Тренировки:"/>
            <TextBox x:Name="TxtTrainingName"/>

            <TextBlock Text="Тренер:"/>
            <ComboBox x:Name="CmbTrainers"/>

            <StackPanel Orientation="Horizontal" HorizontalAlignment="Right" Margin="10">
                <Button Content="Сохранить" Width="100" Margin="5" Click="SaveChanges_Click"/>
                <Button Content="Отмена" Width="100" Margin="5" Click="Cancel_Click"/>
            </StackPanel>
        </StackPanel>
    </Grid>
</Window>
